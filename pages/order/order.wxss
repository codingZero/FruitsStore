scroll-view {
  height: calc(100vh - 80rpx);
}

.takeAddress {
  position: relative;
  padding: 20rpx;
  border-bottom: 1rpx solid #eeeeee
}

.takeAddress > view {
  display: inline-block;
}

.takeAddress > view:first-child {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
}

.takeAddress > view:nth-of-type(2) {
  margin-left: 60rpx;
  margin-right: 40rpx;
  font-size: 30rpx;
}


.userInfo text {
  margin-right: 30rpx;
}

.address {
  margin-top: 20rpx;
  color: #9a9a9a
}

.takeAddress > view:last-child {
  position: absolute;
  right: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  top: 50%;
  margin-top: -15rpx;
}

.list {
  margin-top: 20rpx;
}

.shopping {
  padding: 20rpx 30rpx;
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #eeeeee
}

.shopping .picture {
  width: 150rpx;
  height: 150rpx;
  float: left
}

.shopping .picture image {
  width: 100%;
  height: 100%;
}

.shopping .info {
  float: left;
  margin-left: 30rpx;
  width: 520rpx;
}

.summary {
  font-size: 35rpx;
  margin-top: 10rpx;
}

.price {
  margin-top: 20rpx;
}

.price text:first-child {
  color: red;
  font-size: 35rpx;
}

.price text:last-child {
  color: #9a9a9a;
  font-size: 30rpx;
  float: right;
}


.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: white;
  height: 80rpx;
  border-top: 1px solid #eeeeee
}


.sumPrice {
  height: 80rpx;
  line-height: 80rpx;
  float: left;
  margin-left: 40rpx;
}

.sumPrice text {
  color: red
}


.submit {
  float: right;
  width: 200rpx;
  color: white;
  font-size: 35rpx;
  background-color: red;
  border-radius: 0;

}

.submit::after {
  border: none
}



