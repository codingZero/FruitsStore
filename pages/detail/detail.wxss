.image {
  height: 400rpx
}

.image image {
   width: 100%;
   height: 100%; 
}

.summary {
  margin: 20rpx 20rpx 0;
  font-size: 35rpx;
  color: #555555
}

.price {
  margin-left: 20rpx;
  font-size: 35rpx;
  color: red
}

.count {
  margin-left: 40rpx;
  color: #f0d9af;
  font-size: 30rpx;
}

.introduce {
  margin: 20rpx 0;
  padding: 20rpx;
  color: #9a9a9a;
  font-size: 30rpx;
  border-top: 1px solid #dddddd;
}

.footer {
  position:fixed;
  bottom:0;
  width:100%;
  font-size: 30rpx;
}

.buyCount > text {
  margin-left:40rpx;
  font-size: 30rpx
}

.buyCount > view {
  float: right;
  margin-right:100rpx;
}

.buyCount > view label:first-child {
    margin-right:70rpx;
}

.buyCount > view text {
  margin-right:70rpx;
}

.btn {
  margin-top: 20rpx;
  overflow: hidden
}

.btn button{
  float: left;
  width: 50%;
  color: white;
  border-radius: 0;
  font-size: 35rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.btn button::after {
  border: none
}

.btn button:nth-of-type(1) {
  background-color: red
}

.btn button:nth-of-type(2) {
  background-color: #fdbc40;
}